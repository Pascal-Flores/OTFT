{
  "manifest_version": 3,
  "name": "OTFT - On The Fly Translate",
  "version": "1.0",
  "description": "Translate any text via OpenAI",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
